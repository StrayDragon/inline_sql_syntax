[pnpm-watch]
command=pnpm run watch
output=terminal
pos=long
cwd=<root>

[pg-start]
command=docker run --rm  --name db -e POSTGRES_HOST_AUTH_METHOD=trust -p 5432:5432 postgres
output=terminal
cwd=<root>

[package]
command=pnpm run package
output=terminal
cwd=<root>
save=2

[publish]
command=pnpm run publish
output=terminal
cwd=<root>
save=2

[run-vscode]
command=code --extensionDevelopmentPath=$PWD
silent=1
cwd=<root>
save=2
